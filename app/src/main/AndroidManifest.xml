<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brandycamacho.Spotify_Streamer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        >
        <activity
            android:name=".view.MainStreamerActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.TopTenActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_top_ten" >
        </activity>
        <activity
            android:name=".TrackPlayer"
            android:label="@string/title_activity_track_player"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:configChanges="keyboardHidden"
            >
        </activity>
        <activity android:name=".controller.NotificationReturn"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            >
        </activity>
        <activity android:name=".view.ActivityStandardActionBar"></activity>

        <service android:name=".controller.AudioService"/>
    </application>

</manifest>
